#! /bin/sh

##############
## Coloring ##
##############

[ -f "$HOME/.Xresources" ] && xrdb "$HOME/.Xresources"
getcolors () {
	FOREGROUND=$(xrdb -query | grep 'foreground:'| awk '{print $NF}')
	BACKGROUND=$(xrdb -query | grep 'background:'| awk '{print $NF}')
	BLACK=$(xrdb -query | grep 'color0:'| awk '{print $NF}')
	RED=$(xrdb -query | grep 'color1:'| awk '{print $NF}')
	GREEN=$(xrdb -query | grep 'color2:'| awk '{print $NF}')
	YELLOW=$(xrdb -query | grep 'color3:'| awk '{print $NF}')
	BLUE=$(xrdb -query | grep 'color4:'| awk '{print $NF}')
	MAGENTA=$(xrdb -query | grep 'color5:'| awk '{print $NF}')
	CYAN=$(xrdb -query | grep 'color6:'| awk '{print $NF}')
	WHITE=$(xrdb -query | grep 'color7:'| awk '{print $NF}')
}
getcolors

#################
## BSPWM Setup ##
#################

##
## Monitors
##
bspc monitor -d 1 2 3 4 5

##
## Configs
##
# Color of the border of an unfocused window.
bspc config normal_border_color		"#000000"
# Color of the border of a focused window of an unfocused monitor.
bspc config active_border_color		"#000000"
# Color of the border of a focused window of an focused monitor.
bspc config focused_border_color	"#000000"
# Color of the node --presel-{dir,ratio} message feedback area.
bspc config presel_feedback_color	"#000000"
# Default split ratio
bspc config split_ratio			0.50
# Remove borders of tiled windows for the monocle desktop layout.
bspc config borderless_monocle		true
# Remove gaps of tiled windows for the monocle desktop layout.
bspc config gapless_monocle		true
# Set the desktop layout to monocle if there's only one tiled window in the tree.
bspc config single_monocle		true
# Focus the window under the pointer.
bspc config focus_follows_pointer	true
# When focusig a window, put the pointer at its center.
bspc config pointer_follows_focus	false
# Padding space added at the sides of the monitor or desktop.
bspc config top_padding                 0
bspc config bottom_padding              0
bspc config left_padding                0
bspc config right_padding               0
# Size of the gap that separates windows.
bspc config window_gap          	8
# Window border width.
bspc config border_width		4

##
## Rules
##
# Remove all rules
bspc rule -r *:*
# Pdf viewer
bspc rule -a Zathura state=tiled follow=on


#######################
## Non-BSPWM related ##
#######################

#
# Autostart
#
## Set Wallpaper
feh --no-fehbg --bg-fill "$(shuf -zen1 .config/wallpapers/* | tr '\0' '\n')" &

## Kill all running programs before start
pkill sxhkd polybar picom

## Start programs
### Hotkey daemon
sxhkd &

### Start gnome-keyring-daemon
eval $(/usr/bin/gnome-keyring-daemon --start --components=gpg,pkcs11,secrets,ssh)
export $(gnome-keyring-daemon --start --components=pkcs11,secrets,ssh,gpg)
dbus-update-activation-environment --systemd DISPLAY

### Polybar
polybar xpsbar &

### Compositor
picom &

### Nextcloud client
if ! pgrep nextcloud > /dev/null ;then 
    nextcloud &
fi

#xsettingsd &

#redshift &

#dunst \
#	-lb "$BACKGROUND" -lf "$FOREGROUND" -lfr "$GREEN" \
#	-nb "$BACKGROUND" -nf "$FOREGROUND" -nfr "$BLUE" \
#	-cb "$BACKGROUND" -cf "$FOREGROUND" -cfr "$RED" &

#/usr/bin/libinput-gestures &
#/usr/lib/notification-daemon-1.0/notification-daemon &
